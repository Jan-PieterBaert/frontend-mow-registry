<AuDataTable
  @content={{this.model}}
  @fields="signs templates"
  @noDataMessage={{t "traffic-measure-concept.crud.no-data"}}
  @size={{this.size}}
  @page={{this.page}}
  @sort={{this.sort}} as |s|
>
<s.menu as |menu|>
    <menu.general>
      <AuToolbar class="au-o-box">
        <AuToolbarGroup>
          <AuHeading @skin="2">
            {{t "traffic-measure-concept.name"}}
          </AuHeading>
        </AuToolbarGroup>
        <AuToolbarGroup class="au-c-toolbar__group--center">
          {{! Copied from the AuDataTable::TextSearch component since that doesn't support calling actions on input}}
          <div class="au-c-data-table__search traffic-light-code-search">
            <AuInput
              @value={{this.code}}
              placeholder={{t "traffic-measure-concept.attr.code"}}
              @icon="search"
              @iconAlignment="right"
              {{on "input" (perform this.updateSearchFilterTask "code")}}
            />
          </div>
          <LinkTo class="au-c-button" @route="traffic-measure-concepts.new">
            {{t "traffic-measure-concept.crud.new"}}
          </LinkTo>
        </AuToolbarGroup>
      </AuToolbar>
    </menu.general>
  </s.menu>
  <s.content as |c|>
    <c.header>
      <AuDataTableThSortable
        @field="label"
        @currentSorting={{this.sort}}
        @label="Name"
      />
      <th>
        {{t "traffic-measure-concept.attr.sign"}}
      </th>
      <th>
        {{t "traffic-measure-concept.attr.template"}}
      </th>
      <th>
       {{t "utility.zonality"}}
      </th>
      <th>
        {{t "road-marking-concept.attr.valid"}}
      </th>
      <th></th>
    </c.header>
    <c.body as |trafficMeasureConcept|>
      <td>
        {{trafficMeasureConcept.label}}
      </td>
      <td>
        {{#each trafficMeasureConcept.orderedRelations as |relation|}}
          <img src={{relation.concept.image}} alt="" role="presentation" height="50">
        {{/each}}
      </td>
      <td>
        <TrafficMeasureTemplate @concept={{trafficMeasureConcept}} />
      </td>
      <td>
        {{#if trafficMeasureConcept.zonality}}
          {{t (concat "utility." trafficMeasureConcept.zonality.label)}}
        {{else}}
          {{t "utility.nonZonal"}}
        {{/if}}
      </td>
      <td>
        {{#if trafficMeasureConcept.valid}}
          {{t "utility.yes"}}
        {{else}}
          {{t "utility.no"}}
        {{/if}}
      </td>
      <td>
        <LinkTo
          class="au-c-link"
          @route="traffic-measure-concepts.edit"
          @model={{trafficMeasureConcept.id}}
        >
          {{t "traffic-measure-concept.crud.edit"}}
        </LinkTo>
      </td>
    </c.body>
  </s.content>
</AuDataTable>
