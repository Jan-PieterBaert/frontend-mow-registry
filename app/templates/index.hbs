<div class="au-c-body-container au-c-body-container--scroll">
  <div class="au-o-box">
    <div class="au-o-grid au-o-grid--small">
      <div class="au-o-grid__item au-u-2-5@medium">
        <div class="au-c-content  au-u-margin-bottom">
          <AuHeading @skin="2">
            {{t "landingPage.appName"}}
          </AuHeading>
          <p></p>
        </div>
      </div>
    </div>
    <ul class="au-o-grid au-o-grid--small">
      <li class="au-o-grid__item au-u-1-2@medium au-u-1-3@large">
        <AuCard @flex={{true}} as |c|>
          <c.header @badgeSkin="brand" @badgeIcon="alert-triangle">
            <AuHeading @level="2" @skin="4">
              {{t "landingPage.roadSigns.title"}}
            </AuHeading>
            <p>
              {{t "landingPage.roadSigns.subtitle"}}
            </p>
          </c.header>
          <c.content>
            <p>{{t "landingPage.roadSigns.content"}}</p>
          </c.content>
          <c.footer>
            <LinkTo class="au-c-button" @route="road-sign-concepts">
              {{t "landingPage.roadSigns.button"}}
            </LinkTo>
          </c.footer>
        </AuCard>
      </li>
      <li class="au-o-grid__item au-u-1-2@medium au-u-1-3@large">
        <AuCard @flex={{true}} as |c|>
          <c.header @badgeSkin="brand" @badgeIcon="alert-triangle">
            <AuHeading @level="2" @skin="4">
              {{t "landingPage.measures.title"}} 
            </AuHeading>
            <p>
              {{t "landingPage.measures.subtitle"}}
            </p>
          </c.header>
          <c.content>
            <p>{{t "landingPage.measures.content"}}</p>
          </c.content>
          <c.footer>
            <LinkTo class="au-c-button" @route="measure-concepts">
              {{t "landingPage.measures.button"}}
            </LinkTo>
          </c.footer>
        </AuCard>
      </li>
    </ul>
  </div>
</div>