<PowerSelect
  @allowClear={{false}}
  @searchEnabled={{false}}
  @loadingMessage={{t 'utility.loading'}}
  @options={{this.zonalities}}
  @selected={{this.selectedZonality}}
  @onChange={{this.updateZonality}} as |zonality|
  {{did-insert this.didInsert}}
>
  {{t (concat "utility." zonality.label)}}
</PowerSelect>
